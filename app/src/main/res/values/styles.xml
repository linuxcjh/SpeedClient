<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>

    </style>

    <style name="option_menu_txt">
        <item name="android:textColor">@color/colorAssist</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="title_mid_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title_side_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="root_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBg</item>
    </style>

    <style name="top_title_layout_style">
        <item name="android:layout_height">@dimen/top_title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBlue</item>
    </style>
    <style name="register_client_tip_style">
        <item name="android:textColor">@color/colorListName</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="register_client_left_text_style">
        <item name="android:textColor">@color/colorListName</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="register_edit_view_style">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorAssistLight</item>
        <item name="android:textColor">@color/colorAssist</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 选择对话框-->
    <style name="selection_dialog_theme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--选择对话框动画样式-->
    <style name="selection_dialog_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/selection_dialog_enter</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/selection_dialog_exit</item>
        //退出时的动画
    </style>

    <style name="examine_approve_left_text">
        <item name="android:textColor">@color/colorListName</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="examine_approve_right_text">
        <item name="android:textColor">@color/colorAssist</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
