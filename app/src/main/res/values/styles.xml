<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>

    </style>

    <style name="option_menu_txt">
        <item name="android:textColor">@color/colorAssist</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="title_mid_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="title_side_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="root_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBg</item>
    </style>

    <style name="top_title_layout_style">
        <item name="android:layout_height">@dimen/top_title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBlue</item>
    </style>
    <style name="register_client_tip_style">
        <item name="android:textColor">@color/colorAssist</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
