<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/purchase_view_add_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fore_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/kq_location_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/fore_icon"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="锦业时代B1"
            android:textColor="@color/colorListName"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="锦业时代B1"
            android:textColor="@color/colorAssist"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/selected" />


</RelativeLayout>
