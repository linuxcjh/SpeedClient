<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCallBg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <RelativeLayout
                    android:id="@+id/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/cancel_bt"
                        style="@style/title_side_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:paddingRight="20dp"
                        android:text="取消"
                        android:textColor="@color/colorAssist" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/login_logo" />

                    <TextView
                        android:id="@+id/confirm_bt"
                        style="@style/title_side_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="20dp"
                        android:text="保存跟进提醒"
                        android:textColor="@color/colorBlue" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBlueLight" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tip_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:text="设置下次跟进时间："
                android:textColor="@color/colorAssist"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/content_et"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/call_add_bg"
                android:gravity="center_vertical"
                android:hint="选择时间"
                android:padding="10dp"
                android:textColor="@color/colorAssist"
                android:textColorHint="@color/colorAssistLight"
                android:textSize="14sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
