<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">


    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/nav_bg">

            <TextView
                android:id="@+id/select_language_tv"
                style="@style/title_side_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:text="普通话"
                android:textColor="@color/colorWhite" />


            <TextView
                style="@style/title_mid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="语音输入" />

            <TextView
                android:id="@+id/note_tv"
                style="@style/title_side_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:text="笔记" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_bg_down" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radar_bg"
                android:paddingBottom="15dp">

                <EditText
                    android:id="@+id/content_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="长按下方语音按钮或手动输入"
                    android:textColor="@color/colorListName"
                    android:textColorHint="@color/colorAssist"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/voice_hint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="55dp"
                        android:text="点击下方语音按钮识别语音,您可以："
                        android:textColor="@color/colorClientRadar"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="（如涉及客户信息，建议说出客户全称）"
                        android:textColor="@color/colorAssist"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/voice_tip_1"
                            android:gravity="center_horizontal"
                            android:text="搜索查询客户"
                            android:textColor="@color/colorAssistLight"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/voice_tip_2"
                            android:gravity="center_horizontal"
                            android:text="智能快速分析"
                            android:textColor="@color/colorAssistLight"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:drawableTop="@drawable/voice_tip_3"
                            android:gravity="center_horizontal"
                            android:text="添加工作笔记"
                            android:textColor="@color/colorAssistLight"
                            android:textSize="10sp" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">


                    <TextView
                        android:id="@+id/click_input_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/voice_write"
                        android:gravity="center_vertical"
                        android:text="点击输入文本" />

                    <RelativeLayout
                        android:id="@+id/voice_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/input_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:gravity="center_vertical"
                            android:text="41字"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/input_confirm_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawablePadding="6dp"
                            android:drawableRight="@drawable/voice_submit"
                            android:gravity="center_vertical"
                            android:text="确定" />


                        <TextView
                            android:id="@+id/input_cancel_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="24dp"
                            android:layout_toLeftOf="@+id/input_confirm_tv"
                            android:drawablePadding="6dp"
                            android:drawableRight="@drawable/voice_cancel"
                            android:gravity="center_vertical"
                            android:text="取消 " />

                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radar_bg">

            <TextView
                android:id="@+id/h_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="剩余60s"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/voice_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:src="@drawable/voice_btn" />

            <TextView
                android:id="@+id/voice_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/voice_bt"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="点击语音输入" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>