<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="110dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radar_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="14dp">


        <TextView
            android:id="@+id/client_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="荣华集团西北总部"
            android:textColor="@color/colorTitleText"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/client_visit_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableLeft="@drawable/client_card_lasttime"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="上次拜访2015.09.23"
                android:textColor="@color/colorListName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/client_visited_count_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/customer_visit"
                android:drawablePadding="5dp"
                android:text="拜访过999次"
                android:textColor="@color/colorListName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/client_bus_count_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:drawableLeft="@drawable/client_card_business"
                android:drawablePadding="5dp"
                android:text="商机103"
                android:textColor="@color/colorListName"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDividerLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/client_owner_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.23"
                android:drawableLeft="@drawable/crm_cust_belonging"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="归属人"
                android:textColor="@color/colorListName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/client_tel_reback_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/client_card_remind"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="电话回访2015-09-13"
                android:textColor="@color/colorListName"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>