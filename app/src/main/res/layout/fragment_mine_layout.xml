<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:img="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/nav_bg">


        <TextView
            style="@style/title_mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/colorBlue"
            android:paddingTop="25dp">

            <RelativeLayout
                android:id="@+id/sign_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/re_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/contact_avatar_iv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/defaultavatar" />

                    <!--<com.rongfeng.xxb.components.AvatarImageView-->
                        <!--android:id="@+id/contact_avatar_no_url_iv"-->
                        <!--android:layout_width="80dp"-->
                        <!--android:layout_height="80dp"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:visibility="gone"-->
                        <!--img:contentBackColor="@color/colorUnComplete"-->
                        <!--img:radius="80dp"-->
                        <!--img:textColor="@android:color/white"-->
                        <!--img:textSize="30sp" />-->
                </RelativeLayout>

                <ImageView
                    android:id="@+id/contact_gender_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/re_layout"
                    android:layout_below="@+id/re_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-30dp"
                    android:src="@drawable/me_head_camera" />

            </RelativeLayout>

            <TextView
                android:id="@+id/mine_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/mine_first_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mine_first_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>