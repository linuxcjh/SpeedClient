<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        style="@style/top_title_layout_style"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <ImageButton
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/nav_back" />

        <TextView
            style="@style/title_mid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="跟进计划" />

        <ImageButton
            android:id="@+id/add_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/nav_add" />
    </RelativeLayout>


    <com.rongfeng.speedclient.utils.calendar.EffectsCalendarView
        android:id="@+id/effectsCalendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.rongfeng.speedclient.utils.calendar.EffectsCalendarView>

</LinearLayout>